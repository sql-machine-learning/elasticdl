FROM tensorflow/tensorflow:1.13.1-py3
# For GPU version, use:
# FROM tensorflow/tensorflow:1.13.1-gpu-py3
# for pytorch, use:
# FROM pytorch/pytorch

RUN apt-get update
RUN apt-get install -y unzip curl

# Install gRPC tools in Python
RUN pip install grpcio-tools

# Install the Kubernetes Python client
RUN pip install kubernetes

# Install Docker python SDK
RUN pip install docker 

# Install RecordIO dependencies
RUN apt-get install -y libsnappy-dev

# Install RecordIO 
RUN pip install 'pyrecordio>=0.0.2'

ENV PYTHONPATH=/

# ElasticDL dataset generator and codecs
COPY edl_data /edl_data  
RUN python /edl_data/recordio_gen/mnist/gen_data.py --codec_type tf_example /data
RUN python /edl_data/recordio_gen/cifar10/gen_data.py --codec_type tf_example /data

WORKDIR /
COPY elasticdl /elasticdl
COPY Makefile /Makefile
RUN make
